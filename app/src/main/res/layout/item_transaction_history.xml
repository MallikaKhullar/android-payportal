<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    >

    <LinearLayout
        android:layout_height="200dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/opens_bold"
                    android:id="@+id/paymentTime"
                    android:textSize="16sp"
                    android:text="Payment for 1st quarter" />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/feePaidDate"
                    android:textColor="@color/medgrey"
                    android:layout_marginBottom="20dp"
                    android:textSize="12sp"
                    android:text="" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/transactionId"
                    android:text="5623u7897eq8" />

            </LinearLayout>



        </RelativeLayout>

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">


                <ImageView
                    android:id="@+id/schoolLogo"
                    android:layout_width="50dp"
                    android:layout_centerVertical="true"
                    android:layout_height="50dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/uni_logo" />


            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/feeAmount"
                android:textColor="@color/darkorange"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/opens_bold"
                android:text="â‚¹ 12,250" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_toLeftOf="@id/feeAmount"
                android:layout_toRightOf="@id/schoolLogo"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:fontFamily="@font/opens_bold"
                android:id="@+id/studentName"
                android:text="Aviv Chauhan"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/schoolName"
                android:text="Delhi Public School"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>